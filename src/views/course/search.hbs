<body class="course-search-page">

    <main class="main">

        <!-- Page Title - Udemy Style -->
        <div class="page-title section" style="background-color: #247acf; padding: 2rem 0;">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-8">
                        <h1 class="h2 fw-bold mb-2 text-white" data-aos="fade-up" data-aos-delay="100">
                            {{#if currentSearch}}
                            Search Results
                            {{else}}
                            Search Courses
                            {{/if}}
                        </h1>
                        <p class="text-white-50 mb-0" data-aos="fade-up" data-aos-delay="200">
                            {{#if currentSearch}}
                            Results for "{{currentSearch}}"
                            {{else}}
                            Find your perfect course
                            {{/if}}
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Courses Section -->
        <section class="courses section py-5">
            <div class="container">

                <!-- Search Form -->
                <div class="row mb-4" data-aos="fade-up" data-aos-delay="100">
                    <div class="col-12">
                        <form method="GET" class="row g-3 align-items-center" id="searchForm">
                            <div class="col-md-5">
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                                    <input type="text" name="q" class="form-control" placeholder="Search courses..."
                                        value="{{currentSearch}}">
                                    <input type="text" name="q" class="form-control"
                                        placeholder="Search courses..." value="{{currentSearch}}">
                                </div>
                            </div>
                            <div class="col-md-5">
                                <select name="category" class="form-select">
                                    <option value="">All categories</option>
                                    {{#each categories}}
                                    <option value="{{id}}" {{#if (eq id ../currentCategory)}}selected{{/if}}>{{name}}
                                    </option>
                                    {{#each children}}
                                    <option value="{{id}}" {{#if (eq id ../../currentCategory)}}selected{{/if}}>
                                        &nbsp;&nbsp;{{name}}</option>
                                    {{/each}}
                                    {{/each}}
                                </select>
                            </div>
                            <div class="col-md-2">
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="bi bi-search me-1"></i>Search
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Results Info -->
                <div class="row mb-4" data-aos="fade-up" data-aos-delay="200">
                    <div class="col-12">
                        <div class="d-flex justify-content-between align-items-center">
                            <p class="text-muted mb-0">
                                {{#if currentSearch}}
                                Showing {{courses.length}} results for "{{currentSearch}}"
                                {{else}}
                                Showing {{courses.length}} courses
                                {{/if}}
                            </p>
                            <div class="d-flex align-items-center">
                                <span class="text-muted me-2">Sort by:</span>
                                <div class="btn-group" role="group">
                                    <!-- Rating Toggle -->
                                    <a href="{{baseUrl}}sort={{#if (eq currentSort 'rating_asc')}}rating_desc{{else}}rating_asc{{/if}}"
                                        class="btn btn-outline-secondary btn-sm {{#if (or (eq currentSort 'rating_desc') (eq currentSort 'rating_asc'))}}active{{/if}}"
                                        title="Click to toggle sort direction">
                                        <i class="bi bi-star-fill"></i> Rating
                                        {{#if (or (eq currentSort 'rating_desc') (eq currentSort 'rating_asc'))}}
                                        {{#if (eq currentSort 'rating_asc')}}<i class="bi bi-arrow-up"></i>{{else}}<i
                                            class="bi bi-arrow-down"></i>{{/if}}
                                        {{/if}}
                                    </a>

                                    <!-- Price Toggle -->
                                    <a href="{{baseUrl}}sort={{#if (eq currentSort 'price_desc')}}price_asc{{else}}price_desc{{/if}}"
                                        class="btn btn-outline-secondary btn-sm {{#if (or (eq currentSort 'price_asc') (eq currentSort 'price_desc'))}}active{{/if}}"
                                        title="Click to toggle sort direction">
                                        <i class="bi bi-tag-fill"></i> Price
                                        {{#if (or (eq currentSort 'price_asc') (eq currentSort 'price_desc'))}}
                                        {{#if (eq currentSort 'price_desc')}}
                                        <i class="bi bi-arrow-down"></i>
                                        {{else}}
                                        <i class="bi bi-arrow-up"></i>
                                        {{/if}}
                                        {{/if}}
                                    </a>


                                    <!-- Date Toggle -->
                                    <a href="{{baseUrl}}sort={{#if (eq currentSort 'oldest')}}newest{{else}}oldest{{/if}}"
                                        class="btn btn-outline-secondary btn-sm {{#if (or (eq currentSort 'newest') (eq currentSort 'oldest'))}}active{{/if}}"
                                        title="Click to toggle sort direction">
                                        <i class="bi bi-calendar-event"></i> Date
                                        {{#if (or (eq currentSort 'newest') (eq currentSort 'oldest'))}}
                                        {{#if (eq currentSort 'oldest')}}<i class="bi bi-clock-history"></i>{{else}}<i
                                            class="bi bi-clock"></i>{{/if}}
                                    <a href="{{baseUrl}}sort={{#if (eq currentSort "rating_asc")}}rating_desc{{else}}rating_asc{{/if}}"
                                        class="btn btn-outline-secondary btn-sm {{#if (or (eq currentSort "rating_desc") (eq currentSort "rating_asc"))}}active{{/if}}"
                                        title="Click to toggle sort direction">
                                        <i class="bi bi-star-fill"></i> Rating
                                        {{#if (or (eq currentSort "rating_desc") (eq currentSort "rating_asc"))}}
                                            {{#if (eq currentSort "rating_asc")}}
                                            <i class="bi bi-arrow-up"></i>
                                            {{else}}
                                            <i class="bi bi-arrow-down"></i>
                                            {{/if}}
                                        {{/if}}
                                    </a>
                                    
                                    <!-- Price Toggle -->
                                    <a href="{{baseUrl}}sort={{#if (eq currentSort "price_desc")}}price_asc{{else}}price_desc{{/if}}"
                                        class="btn btn-outline-secondary btn-sm {{#if (or (eq currentSort "price_asc") (eq currentSort "price_desc"))}}active{{/if}}"
                                        title="Click to toggle sort direction">
                                        <i class="bi bi-tag-fill"></i> Price
                                        {{#if (or (eq currentSort "price_asc") (eq currentSort "price_desc"))}}
                                            {{#if (eq currentSort "price_desc")}}
                                            <i class="bi bi-arrow-down"></i>
                                            {{else}}
                                            <i class="bi bi-arrow-up"></i>
                                            {{/if}}
                                        {{/if}}
                                    </a>
                                    
                                    <!-- Date Toggle -->
                                    <a href="{{baseUrl}}sort={{#if (eq currentSort "oldest")}}newest{{else}}oldest{{/if}}"
                                        class="btn btn-outline-secondary btn-sm {{#if (or (eq currentSort "newest") (eq currentSort "oldest"))}}active{{/if}}"
                                        title="Click to toggle sort direction">
                                        <i class="bi bi-clock-fill"></i> Date
                                        {{#if (or (eq currentSort "newest") (eq currentSort "oldest"))}}
                                            {{#if (eq currentSort "oldest")}}
                                            <i class="bi bi-arrow-up"></i>
                                            {{else}}
                                            <i class="bi bi-arrow-down"></i>
                                            {{/if}}
                                        {{/if}}
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Courses Grid -->
                <div class="row g-4">
                    {{#each courses}}
                    <div class="col-lg-3 col-md-6" data-aos="fade-up" data-aos-delay="100">
                        <div class="course-card bg-white rounded shadow-sm border-0 h-100"
                            style="transition: all 0.3s ease; overflow: hidden;">
                            <div class="course-thumbnail position-relative">
                                <img src="{{thumbnail_url}}" loading="lazy" class="img-fluid w-100" alt="{{title}}"
                                    style="height: 200px; object-fit: cover;">
                                <div class="course-overlay position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center"
                                    style="background: rgba(0,0,0,0.7); opacity: 0; transition: opacity 0.3s ease;">
                                    <a href="/courses/detail?id={{id}}" class="btn btn-warning btn-sm">View Course</a>
                                    <a href="/courses/{{id}}" class="btn btn-warning btn-sm">View Course</a>
                                </div>
                                <div class="position-absolute top-0 start-0 m-2">
                                    {{#if is_bestseller}}
                                    <span class="badge bg-warning text-dark me-1">Best Seller</span>
                                    {{/if}}
                                    {{#if is_new}}
                                    <span class="badge bg-success">New</span>
                                    {{/if}}
                                </div>
                                {{#if sale_price}}
                                <div class="position-absolute top-0 end-0 m-2">
                                    <span class="badge bg-danger">Sale</span>
                                </div>
                                {{/if}}
                            </div>
                            <div class="course-content p-3">
                                <h6 class="course-title fw-bold mb-2"
                                    style="font-size: 0.9rem; line-height: 1.3; height: 2.6rem; overflow: hidden;">
                                    <a href="/courses/detail?id={{id}}"
                                        class="text-decoration-none text-dark">{{title}}</a>
                                </h6>
                                <p class="course-category mb-1">
                                    <span class="badge bg-primary text-white small">{{category_name}}</span>
                                </p>
                                <p class="course-instructor text-muted small mb-2">{{instructor_name}}</p>
                                <div class="course-rating d-flex align-items-center mb-2">
                                    <div class="rating me-2">
                                        {{#each (range 1 5)}}
                                        <i class="bi bi-star{{#if (gte ../rating_avg this)}}-fill{{/if}} text-warning"
                                            style="font-size: 0.8rem;"></i>
                                        {{/each}}
                                    </div>
                                    <span class="text-muted small">{{#if rating_avg}}{{rating_avg}}{{else}}0{{/if}}
                                        ({{rating_count}})</span>
                                    <a href="/courses/{{id}}" class="text-decoration-none text-dark">{{title}}</a>
                                </h6>
                                <p class="course-instructor text-muted small mb-2">{{instructor_name}}</p>
                                <div class="course-rating d-flex align-items-center mb-2">
                                    <div class="rating me-2">
                                        {{#range 1 5}}
                                        <i class="bi bi-star{{#if (gte ../rating_avg this)}}-fill{{/if}} text-warning"
                                            style="font-size: 0.8rem;"></i>
                                        {{/range}}
                                    </div>
                                    <span class="text-muted small">{{#if rating_avg}}{{rating_avg}}{{else}}0{{/if}} ({{rating_count}})</span>
                                </div>
                                <div class="course-price d-flex align-items-center justify-content-between">
                                    <div>
                                        {{#if sale_price}}
                                        <span class="h6 text-dark fw-bold mb-0">{{formatPrice sale_price}}đ</span>
                                        <span class="text-decoration-line-through text-muted small ms-2">{{formatPrice
                                            price}}đ</span>
                                        {{else}}
                                        <span class="h6 text-dark fw-bold mb-0">{{formatPrice price}}đ</span>
                                        {{/if}}
                                    </div>
                                </div>
                                <div class="course-meta mt-2">
                                    <small class="text-muted">
                                        <i class="bi bi-eye me-1"></i>{{views}} views
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{else}}
                    <div class="col-12 text-center py-5">
                        <i class="bi bi-search display-1 text-muted"></i>
                        <h3 class="mt-3">No courses found</h3>
                        <p class="text-muted mb-4">
                            {{#if currentSearch}}
                            No results found for "{{currentSearch}}". Try different keywords.
                            {{else}}
                            Enter search keywords to find courses.
                            {{/if}}
                        </p>
                        <a href="/courses" class="btn btn-primary">Browse all courses</a>
                    </div>
                    {{/each}}
                </div>

                <!-- Pagination -->
                {{#if (gt totalPages 1)}}
                <nav aria-label="Page navigation" style="padding-top: 20px;">
                    <ul class="pagination justify-content-center">
                        <!-- Previous button -->
                        <li class="page-item {{#if (eq page 1)}}disabled{{/if}}">
                            <a class="page-link" href="{{baseUrl}}page={{decrement page}}" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>

                        <!-- First page -->
                        <li class="page-item {{#if (isAtPage page 1)}}active{{/if}}">
                            <a class="page-link" href="{{baseUrl}}page=1">1</a>
                        </li>

                        <!-- Page 2 -->
                        {{#if (gt totalPages 1)}}
                        <li class="page-item {{#if (isAtPage page 2)}}active{{/if}}">
                            <a class="page-link" href="{{baseUrl}}page=2">2</a>
                        </li>
                        {{/if}}

                        <!-- Page 3 -->
                        {{#if (gt totalPages 2)}}
                        <li class="page-item {{#if (isAtPage page 3)}}active{{/if}}">
                            <a class="page-link" href="{{baseUrl}}page=3">3</a>
                        </li>
                        {{/if}}

                        <!-- Show dots if more than 3 pages -->
                        {{#if (gt totalPages 3)}}
                        <li class="page-item disabled">
                            <a class="page-link">...</a>
                        </li>
                        {{/if}}

                        <!-- Last page -->
                        {{#if (gt totalPages 3)}}
                        <li class="page-item {{#if (isAtPage page totalPages)}}active{{/if}}">
                            <a class="page-link" href="{{baseUrl}}page={{totalPages}}">{{totalPages}}</a>
                        </li>
                        {{/if}}

                        <!-- Next button -->
                        <li class="page-item {{#if (eq page totalPages)}}disabled{{/if}}">
                            <a class="page-link" href="{{baseUrl}}page={{increment page}}" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
                {{/if}}

            </div>
        </section>

    </main>

    <!-- Scroll Top -->
    <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center">
        <i class="bi bi-arrow-up-short"></i>
    </a>

