<script>
    var cleavePrice = new Cleave('#txtPrice', {
        numeral: true,
        numeralThousandsGroupStyle: 'thousand'
    });
    var cleaveSalePrice = new Cleave('#txtSalePrice', {
        numeral: true,
        numeralThousandsGroupStyle: 'thousand'
    });
    const quill = new Quill('#editor', {
