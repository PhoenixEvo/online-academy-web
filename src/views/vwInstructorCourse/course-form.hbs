        document.querySelectorAll('.category-menu').forEach(menu => {
            menu.addEventListener('click', (e) => {
                e.stopPropagation();
            });
        });
        document.querySelectorAll('.category-toggle').forEach(link => {
            link.addEventListener('click', (e) => {
                e.preventDefault();
                e.stopPropagation();
                const next = link.nextElementSibling;
                if (next && next.classList.contains('dropdown-menu')) {
                    const li = link.parentElement;
                    const parentUl = li && li.parentElement;
                    if (parentUl) {
                        try {
                            const siblings = parentUl.querySelectorAll(':scope > .dropdown-submenu > .dropdown-menu.show');
                            siblings.forEach(el => { if (el !== next) el.classList.remove('show'); });
                        } catch (err) {
                            Array.from(parentUl.children).forEach(childLi => {
                                const submenu = childLi.querySelector('.dropdown-menu');
                                if (submenu && submenu !== next) submenu.classList.remove('show');
                            });
                        }
                    }
                    next.classList.toggle('show');
                } else {
                    const id = link.dataset.id;
                    document.getElementById('selCatId').value = id;
                    document.getElementById('btnCategory').textContent = link.textContent.trim();
                    document.querySelectorAll('.dropdown-menu.show').forEach(el => el.classList.remove('show'));
                }
            });
        });
            document.querySelectorAll('.category-select').forEach(link => {
                link.addEventListener('click', (e) => {
                    e.preventDefault();
                    e.stopPropagation();
                    const id = link.dataset.id;
                    const label = link.textContent.trim();
                    document.getElementById('selCatId').value = id;
                    document.getElementById('btnCategory').textContent = label;
                    document.querySelectorAll('.dropdown-menu.show').forEach(el => el.classList.remove('show'));
                });
            });
            document.addEventListener('click', (e) => {
                const inside = e.target.closest('.dropdown');
                if (!inside) {
                    document.querySelectorAll('.dropdown-menu.show').forEach(el => el.classList.remove('show'));
                }
            });
        // Upload thumbnail to Supabase
        (function(){
            const csrfToken = '{{csrfToken}}';
            const btn = document.getElementById('btnUploadThumbnail');
            const fileInput = document.getElementById('file-course-thumbnail');
            const urlInput = document.getElementById('txtThumbnailUrl');
            const preview = document.getElementById('courseThumbnailPreview');
            function onClick(){ fileInput?.click(); }
            async function onChange(e){
                const f = e.currentTarget.files?.[0];
                if (!f) return;
                const fd = new FormData();
                fd.append('file', f);
                fd.append('folder', 'course-thumbnails');
                const res = await fetch('/api/uploads/file', { method: 'POST', headers: { 'x-csrf-token': csrfToken }, body: fd });
                const data = await res.json();
                if (res.ok && data.success) {
                    urlInput.value = data.publicUrl;
                    if (preview) preview.src = data.publicUrl;
                    await Swal.fire({ icon: 'success', title: 'Thumbnail uploaded', text: 'URL inserted.' });
                } else {
                    Swal.fire({ icon: 'error', title: 'Upload failed', text: data.message || 'Please try again.' });
                }
                e.currentTarget.value = '';
            }
            document.addEventListener('DOMContentLoaded', function(){
                btn?.addEventListener('click', onClick);
                fileInput?.addEventListener('change', onChange);
            });
        })();
</script>
