<div class="admin-wrapper">
  <div class="admin-header">
    <h1 class="admin-title">
      <i class="bi bi-journal-text me-2"></i>Course Management
    </h1>
  </div>

  <!-- Stats Cards -->
  <div class="row mb-4">
    <div class="col-md-3">
      <div class="stat-card">
        <i class="bi bi-journal-text"></i>
        <div>
          <h3>{{courses.length}}</h3>
          <p>Total Courses</p>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="stat-card">
        <i class="bi bi-clock-history"></i>
        <div>
          <h3>{{totalLessons}}</h3>
          <p>Total Lessons</p>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="stat-card">
        <i class="bi bi-people"></i>
        <div>
          <h3>{{totalEnrollments}}</h3>
          <p>Enrollments</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Table -->
  <div class="table-container">
    <div class="table-responsive">
      <table class="admin-table">
        <thead>
          <tr>
            <th><i class="bi bi-hash"></i></th>
            <th><i class="bi bi-book"></i> Title</th>
            <th><i class="bi bi-card-text"></i> Description</th>
            <th><i class="bi bi-calendar3"></i> Created</th>
            <th><i class="bi bi-gear"></i></th>
          </tr>
        </thead>
        <tbody>
          {{#each courses}}
          <tr class="table-row">
           <td class="id">{{id}}</td>

            <td class="title">
              <div class="course-title">{{title}}</div>
              {{#if category}}
                <small class="text-muted">{{category}}</small>
              {{/if}}
            </td>

            <td class="desc text-truncate" title="{{short_desc}}">
              {{short_desc}}
            </td>

                <td class="created">
                <span>{{formatCreatedUpdated this.created_at this.updated_at}}</span>
              </td>
            <td class="actions">
              <a 
  href="/admins/courses/{{id}}/delete" 
  class="btn-action delete" 
  title="Delete"
>
  <i class="bi bi-trash"></i>
</a>
            </td>
          </tr>
          {{else}}
          <tr>
            <td colspan="5" class="empty-state">
              <i class="bi bi-journal-x"></i>
              <p>No courses found.</p>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>

