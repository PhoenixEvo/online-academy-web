<div class="admin-wrapper">
  <div class="admin-header">
    <h1 class="admin-title">
      Course Management
    </h1>
  </div>

  <!-- Stats Cards -->
  <div class="row mb-4">
    <div class="col-md-3">
      <div class="stat-card">
        <i class="bi bi-journal-text"></i>
        <div>
          <h3>{{courses.length}}</h3>
          <p>Total Courses</p>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="stat-card">
        <i class="bi bi-clock-history"></i>
        <div>
          <h3>{{totalLessons}}</h3>
          <p>Total Lessons</p>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="stat-card">
        <i class="bi bi-people"></i>
        <div>
          <h3>{{totalEnrollments}}</h3>
          <p>Total Enrollments</p>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="stat-card">
        <i class="bi bi-graph-up"></i>
        <div>
          <h3>{{totalStudents}}</h3>
          <p>Total Students</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Table -->
  <div class="table-container">
    <div class="table-responsive">
      <table class="admin-table">
        <thead>
          <tr>
            <th><i class="bi bi-hash"></i></th>
            <th><i class="bi bi-book"></i> Title</th>
            <th><i class="bi bi-tags"></i> Category</th>
            <th><i class="bi bi-people"></i> Students</th>
            <th><i class="bi bi-card-text"></i> Description</th>
            <th><i class="bi bi-calendar3"></i> Created</th>
            <th><i class="bi bi-gear"></i></th>
          </tr>
        </thead>
        <tbody>
          {{#each courses}}
          <tr class="table-row">
            <td class="id">{{id}}</td>
            <td class="title">
                 <div class="course-title">{{title}}</div>
              </td>
                <td class="category">
                   {{#if category}}
                      <span class="badge bg-secondary">{{category}}</span>
                 {{else}}
           <span class="text-muted">â€”</span>
                 {{/if}}
                  </td>
                <td class="students">
              <i class="bi bi-people"></i>
              <span class="student-count">{{student_count}}</span>
            </td>
            <td class="desc text-truncate" title="{{short_desc}}">
              {{short_desc}}
            </td>
            <td class="created">
              <span>{{formatCreatedUpdated this.created_at this.updated_at}}</span>
            </td>
            <td class="actions">
              <a 
                href="/admins/courses/{{id}}/delete" 
                class="btn-action delete" 
                title="Delete"
                onclick="return confirm('Are you sure you want to delete {{title}}?')"
              >
                <i class="bi bi-trash"></i>
              </a>
            </td>
          </tr>
          {{else}}
          <tr>
            <td colspan="6" class="empty-state">
              <i class="bi bi-journal-x"></i>
              <p>No courses found.</p>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>

