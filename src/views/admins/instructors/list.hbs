<div class="admin-wrapper">
  <div class="admin-header">
    <h1 class="admin-title">
      <i class="bi bi-person-workspace me-2"></i>Instructor Management
    </h1>
    <a href="/admins/instructors/add" class="btn-add-category">
      <i class="bi bi-plus-circle me-2"></i>Add Instructor
    </a>
  </div>

  <div class="table-container">
    <div class="table-responsive">
      <table class="admin-table">
        <thead>
          <tr>
            <th><i class="bi bi-hash"></i></th>
            <th><i class="bi bi-person-circle"></i> Avatar</th>
            <th><i class="bi bi-person"></i> Name</th>
            <th><i class="bi bi-envelope"></i> Email</th>
            <th><i class="bi bi-briefcase"></i> Job Title</th>
            <th><i class="bi bi-check-circle"></i> Verified</th>
            <th><i class="bi bi-gear"></i> Actions</th>
          </tr>
        </thead>
        <tbody>
          {{#each instructors}}
          <tr class="table-row">
            <td class="id">{{id}}</td>
            <td class="avatar-col text-center">
              {{#if image_50x50}}
                <img src="{{image_50x50}}" class="avatar-img" alt="{{display_name}}"
                     onerror="this.style.display='none'; this.nextElementSibling.style.display='inline-block';">
                <span class="avatar-placeholder" style="display:none;">N/A</span>
              {{else}}
                <span class="avatar-placeholder">N/A</span>
              {{/if}}
            </td>
            <td class="name">
              <i class="bi bi-circle-fill text-primary me-2"></i>{{display_name}}
            </td>
            <td class="email">{{email}}</td>
            <td class="job-title">{{job_title}}</td>
            <td class="verified text-center">
              {{#if is_verified}}
                <i class="bi bi-check-circle text-success"></i>
              {{else}}
                <i class="bi bi-x-circle text-secondary"></i>
              {{/if}}
            </td>
            <td class="actions text-center">
              <a href="/admins/instructors/{{id}}/edit" class="btn-action edit" title="Edit">
                <i class="bi bi-pencil"></i>
              </a>
              <a href="/admins/instructors/{{id}}/delete" class="btn-action delete" title="Delete"
                 onclick="return confirm('Delete {{display_name}}?')">
                <i class="bi bi-trash"></i>
              </a>
            </td>
          </tr>
          {{else}}
          <tr>
            <td colspan="7" class="empty-state">
              <i class="bi bi-person-x"></i>
              <p>No instructors yet. <a href="/admins/instructors/add">Create one!</a></p>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>

