<div class="container mt-4">
  <h2 class="mb-3">Edit Category</h2>

  <form action="/admins/categories/edit/{{category.id}}" method="POST" class="p-3 border rounded bg-light">
    <input type="hidden" name="_csrf" value="{{csrfToken}}">

    <div class="mb-3">
      <label class="form-label">Category Name</label>
      <input 
        type="text" 
        class="form-control" 
        name="name" 
        required 
        value="{{category.name}}">
    </div>

    <div class="mb-3">
      <label class="form-label">Parent Category</label>
      <select class="form-select" name="parent_id">
        <option value="">-- None --</option>
        {{#each parentCategories}}
          {{#if ../category.parent_id}}
            <option value="{{id}}" {{#ifCond id ../category.parent_id}}selected{{/ifCond}}>{{name}}</option>
          {{else}}
            <option value="{{id}}">{{name}}</option>
          {{/if}}
        {{/each}}
      </select>
    </div>

    <div class="text-end">
      <a href="/admins/categories" class="btn btn-secondary">Back</a>
      <button type="submit" class="btn btn-primary">Save</button>
    </div>
  </form>
</div>
