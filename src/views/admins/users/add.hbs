<div class="admin-wrapper">
  <div class="admin-header">
    <h1 class="admin-title">
      Add New User
    </h1>
    <a href="/admins/users" class="btn-back">
      Back
    </a>
  </div>

  <!-- HIỂN THỊ LỖI -->
  {{#if error}}
    <div class="alert alert-danger">
      <strong>Lỗi:</strong> {{error}}
    </div>
  {{/if}}

  <div class="form-container">
    <form action="/admins/users/add" method="POST">
      <input type="hidden" name="_csrf" value="{{csrfToken}}" />

      <!-- Name -->
      <div class="form-group">
        <label class="form-label">Name</label>
        <input
          type="text"
          class="form-input"
          name="name"
          value="{{old.name}}"
          required
          placeholder="Enter name..."
        />
      </div>

      <!-- Email - Highlight nếu lỗi liên quan đến email -->
      <div class="form-group">
        <label class="form-label">Email</label>
        <input
          type="email"
          id="userEmail"
          class="form-input {{#if (eq error 'Email already exists')}}is-invalid{{/if}}"
          name="email"
          value="{{old.email}}"
          required
          placeholder="Enter email..."
        />
        {{#if (eq error 'Email already exists')}}
          <small class="text-danger">Email này đã được sử dụng</small>
        {{/if}}
        <div id="userEmailValidationMessage" class="ajax-validation-message" style="display: none; margin-top: 5px; font-size: 0.875rem;"></div>
      </div>

      <!-- Password -->
      <div class="form-group">
        <label class="form-label">Password</label>
        <input
          type="password"
          class="form-input"
          name="password"
          required
          placeholder="Enter password..."
        />
      </div>

      <!-- Role -->
      <div class="form-group">
        <label class="form-label">Role</label>
        <select class="form-select" name="role" required>
          <option value="student" {{#if (eq old.role 'student')}}selected{{/if}}>Student</option>
          <option value="admin" {{#if (eq old.role 'admin')}}selected{{/if}}>Admin</option>
        </select>
      </div>

      <!-- Avatar URL -->
      <div class="form-group">
        <label class="form-label">Avatar URL (Optional)</label>
        <input
          type="url"
          class="form-input"
          name="avatar_url"
          value="{{old.avatar_url}}"
          placeholder="https://example.com/avatar.jpg"
        />
      </div>

      <div class="form-actions">
        <a href="/admins/users" class="btn-secondary">Cancel</a>
        <button type="submit" class="btn-primary">
          Create User
        </button>
      </div>
    </form>
  </div>
</div>
<style>
 .admin-wrapper { padding: 20px 100px; }

  .admin-header {
    background: linear-gradient(
      135deg,
      var(--accent-color) 0%,
      color-mix(in srgb, var(--accent-color), black 20%) 100%
    );
    color: var(--contrast-color);
    padding: 15px 20px;
    border-radius: 12px;
    margin-bottom: 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .admin-title {
    margin: 0;
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--contrast-color);
  }

  .btn-back {
    background: rgba(255, 255, 255, 0.2);
    border: 1px solid var(--contrast-color);
    color: var(--contrast-color);
    padding: 8px 16px;
    border-radius: 20px;
    text-decoration: none;
    font-size: 0.9rem;
  }

  .btn-back:hover {
    background: var(--contrast-color);
    color: var(--accent-color);
  }

  .form-container {
    background: var(--surface-color);
    padding: 25px;
    border-radius: 12px;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
    max-width: 500px;
    margin: 0 auto;
  }

  .form-group {
    margin-bottom: 20px;
  }

  .form-label {
    display: block;
    margin-bottom: 6px;
    font-weight: 600;
    color: var(--heading-color);
    font-size: 1rem;
  }

  .form-input,
  .form-select {
    width: 100%;
    padding: 12px 15px;
    border: 2px solid
      color-mix(in srgb, var(--default-color), transparent 70%);
    border-radius: 8px;
    font-size: 1rem;
    transition: all 0.3s;
  }

  .form-input:focus,
  .form-select:focus {
    border-color: var(--accent-color);
    box-shadow: 0 0 0 2px
      color-mix(in srgb, var(--accent-color), transparent 75%);
  }

  .form-actions {
    display: flex;
    gap: 12px;
    justify-content: flex-end;
  }
.alert {
  padding: 12px 16px;
  margin-bottom: 20px;
  border-radius: 8px;
  font-size: 0.95rem;
  display: flex;
  align-items: center;
  gap: 8px;
}

.alert-danger {
  background: #f8d7da;
  color: #721c24;
  border: 1px solid #f5c6cb;
}

.is-invalid {
  border-color: #dc3545 !important;
  box-shadow: 0 0 0 2px rgba(220, 53, 69, 0.25);
}

.text-danger {
  color: #dc3545;
  font-size: 0.85rem;
  margin-top: 4px;
  display: block;
}
  .btn-primary,
  .btn-secondary {
    padding: 12px 24px;
    border-radius: 20px;
    font-weight: 600;
    border: none;
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-size: 0.95rem;
  }

  .btn-primary {
    background: var(--accent-color);
    color: var(--contrast-color);
  }

  .btn-primary:hover {
    transform: translateY(-1px);
    background: color-mix(in srgb, var(--accent-color), black 10%);
  }

  .btn-secondary {
    background: color-mix(in srgb, var(--default-color), transparent 20%);
    color: var(--heading-color);
  }

  .btn-secondary:hover {
    background: color-mix(in srgb, var(--default-color), transparent 40%);
  }

  @media (max-width: 768px) {
    .admin-header {
      flex-direction: column;
      gap: 10px;
      text-align: center;
      padding: 12px;
    }

    .form-container {
      padding: 20px;
      margin: 0 15px;
    }

    .form-actions {
      flex-direction: column;
    }

    .btn-primary,
    .btn-secondary {
      justify-content: center;
      width: 100%;
    }
  }
</style>

<script src="/js/ajax-email-validation.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
  // Initialize email validation for add user form
  initializeEmailValidation('userEmail', 'userEmailValidationMessage', null);
});
</script>
