<div class="admin-wrapper">
  <div class="admin-header">
    <h1 class="admin-title">
      User Management
    </h1>
    <a href="/admins/users/add" class="btn-primary">
      <i class="bi bi-plus-circle"></i> Add New
    </a>
  </div>
{{#if success}}
  <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
    {{success}}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
{{/if}}

{{#if error}}
  <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
    {{error}}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
{{/if}}
  <div class="filter-tabs mb-4">
    <a href="/admins/users?filter=all" 
       class="filter-btn {{#if (eq filter 'all')}}active{{/if}}">
      <i class="bi bi-people"></i>
      <span>All ({{totalUsers}})</span>
    </a>

    <a href="/admins/users?filter=admin" 
       class="filter-btn {{#if (eq filter 'admin')}}active{{/if}}">
      <i class="bi bi-shield-lock text-danger"></i>
      <span>Admins ({{admins.length}})</span>
    </a>

    <a href="/admins/users?filter=student" 
       class="filter-btn {{#if (eq filter 'student')}}active{{/if}}">
      <i class="bi bi-mortarboard text-info"></i>
      <span>Students ({{students.length}})</span>
    </a>
  </div>
  <table class="admin-table">
    <thead>
      <tr>
        <th>#</th>
        <th>Avatar</th>
        <th>Name</th>
        <th>Email</th>
        <th>Role</th>
        <th>Verified</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each users}}
      <tr class="table-row">
        <td class="id">{{id}}</td>
        <td class="avatar-col text-center">
          {{#if avatar_url}}
            <img src="{{avatar_url}}" alt="{{name}}" class="avatar-img"
                 onerror="this.style.display='none'; this.nextElementSibling.style.display='inline-block';">
            <span class="avatar-placeholder" style="display:none;">N/A</span>
          {{else}}
            <span class="avatar-placeholder">N/A</span>
          {{/if}}
        </td>
        <td class="name">{{name}}</td>
        <td class="email">{{email}}</td>
        <td class="role">
          {{#if (eq role 'admin')}}
            <span class="badge bg-danger">Admin</span>
          {{else if (eq role 'student')}}
            <span class="badge bg-info text-dark">Student</span>
          
          {{/if}}
        </td>
        <td class="verified text-center">
          {{#if is_verified}}
            <i class="bi bi-check-circle text-success"></i>
          {{else}}
            <i class="bi bi-x-circle text-secondary"></i>
          {{/if}}
        </td>
        <td class="actions text-center">
          {{#if (or (eq role 'admin') (eq role 'student'))}}
            <a href="/admins/users/{{id}}/edit" class="btn-action edit" title="Edit">
              <i class="bi bi-pencil"></i>
            </a>
            {{#unless (eq id '34')}}
              <a href="/admins/users/{{id}}/delete" class="btn-action delete" title="Delete"
                 onclick="return confirm('Are you sure you want to delete {{name}}?')">
                <i class="bi bi-trash"></i>
              </a>
            {{/unless}}
          {{else}}
            <span class="text-muted" title="Managed elsewhere">â€”</span>
          {{/if}}
        </td>
      </tr>
      {{else}}
      <tr>
        <td colspan="7" class="empty-state">
          <i class="bi bi-person-x"></i>
          <p>No users found.</p>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<style>
