<main class="main">

    <!-- Page Title -->
    <div class="page-title" data-aos="fade">
        <nav class="breadcrumbs">
            <div class="container">
                <ol>
                    <li><a href="/">Home</a></li>
                    <li class="current">{{Course.title}}</li>
                </ol>
            </div>
        </nav>

        <div class="heading">
            <div class="container">
                <div class="row d-flex justify-content-center text-center">
                    <div class="col-lg-8">
                        <h1>{{Course.title}}</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Page Title -->

    <!-- Course Details Section -->
    <section id="course-details" class="course-details section">
        <div class="container" data-aos="fade-up" data-aos-delay="100">
            <div class="row">

                <!-- Main video & feedback -->
                <div class="col-lg-8 col-md-6">

                    <!-- Video player -->
                    <div class="course-header mb-4">
                        <video id="lesson-video" class="w-100 rounded shadow" controls>
                            <source src="{{lesson.video_url}}" type="video/mp4">
                            Your browser does not support the video tag.
                        </video>
                    </div>

                    <h2 class="fw-bold">{{lesson.title}}</h2>
                    <p class="text-muted">{{lesson.description}}</p>

                    <!-- Progress -->
                    <div class="mt-4">
                        <h5>Progress</h5>
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar bg-success" role="progressbar" style="width: {{progressPercent}}%;"
                                aria-valuenow="{{progressPercent}}" aria-valuemin="0" aria-valuemax="100">
                                {{progressPercent}} %
                            </div>
                        </div>
                        <p class="mt-2 text-muted">
                            {{#if progress.completed}}
                            Completed
                            {{/if}}
                        </p>
                    </div>

                    <!-- Feedback form -->
                    <div id="feedback" class="mt-5">
                        <h3>Phản hồi bài học</h3>
                        <form action="/lessons/{{lesson.id}}/feedback" method="POST">
                            <div class="mb-3">
                                <label class="form-label">Comment</label>
                                <textarea name="comment" class="form-control" rows="3" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Send Feedback</button>
                        </form>
                    </div>
                </div>

                <!-- Sidebar -->
                <div class="col-lg-4 col-md-6">
                    <section id="course-sidebar" class="mt-4 mt-lg-0" data-aos="fade-left" data-aos-delay="200">
                        <div class="course-sidebar p-3 rounded shadow-sm bg-light">
                            <h4 class="mb-3">List of Lessons</h4>

                            <div class="list-group">
                                {{#each lessons}}
                                <a href="/learn/{{this.id}}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center
                    {{#if (eq this.id ../lesson.id)}}active{{/if}}">
                                    <span>{{this.title}}</span>
                                    {{#if this.completed}}
                                    <i class="bi bi-check-circle text-success"></i>
                                    {{/if}}
                                </a>
                                {{/each}}
                            </div>
                        </div>
                    </section>
                </div>

            </div>
        </div>
    </section>

</main>