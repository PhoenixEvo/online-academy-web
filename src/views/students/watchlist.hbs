<main class="main">

    <!-- Page Title -->
    <div class="page-title" data-aos="fade">

        <nav class="breadcrumbs">
            <div class="container">
                <ol>
                    <li><a href="/">Home</a></li>
                    <li class="current">Courses</li>
                </ol>
            </div>
        </nav>

        <div class="heading">
            <div class="container">
                <div class="row d-flex justify-content-center text-center">
                    <div class="col-lg-8">
                        <h1>Watchlist</h1>
                        <p class="mb-0">
                            Save your favorite courses and revisit them anytime!
                            Manage all your saved courses conveniently in one place.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- End Page Title -->

    <!-- Courses Section -->
    <section id="courses" class="courses section"  style="padding-top: 30px; padding-bottom: 30px;">

        <div class="container">

            <div class="row">
                <input type="hidden" name="_csrf" value="{{csrfToken}}">
                {{#if courses.length}}
                {{#each courses}}
                <div class="col-lg-4 col-md-6 d-flex align-items-stretch mt-4 mt-lg-0 mb-4" data-aos="zoom-in"
                    data-aos-delay="300">
                    <div class="course-item" 
                        style="width: 100%; border: 1px solid #e0e0e0; border-radius: 10px; overflow: hidden; 
                         box-shadow: 0 2px 6px rgba(0,0,0,0.05); transition: transform 0.3s ease, box-shadow 0.3s ease;">
                        

                        <form method="POST" action="/students/watchlist/remove/{{this.id}}" 
                            style="position: absolute; top: 10px; left: 10px; z-index: 10;">
                            <input type="hidden" name="_csrf" value="{{../csrfToken}}">
                            <button type="submit" class="remove-btn" 
                                style="background: none; border: none; color: #dc3545; font-size: 22px; cursor: pointer;">
                                <i class="bi bi-x-circle"></i>
                            </button>
                        </form>

                        <img src="{{thumbnailUrl}}" alt="" 
                            style="width: 100%; height: 200px; object-fit: cover; border-bottom: 1px solid #ddd;">


                        <div class="course-content"  style="padding: 15px; flex: 1;">
                            <div 
                                style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 10px;">
                                <p class="category" 
                                    style="margin: 0; background: #0c85c6; padding: 3px 10px; border-radius: 5px; font-size: 13px;">
                                    {{categoryName}}
                                </p>
                                <p class="price"  style="margin: 0; font-weight: bold;">${{format_number price}}</p>
                            </div>
                            <h3  style="font-size: 18px; margin-bottom: 8px;">
                                <a href="/courses/detail?id={{this.id}}" style="color: #333; text-decoration: none;">
                                    {{title}}
                                </a>
                            </h3>
                            <p class="description"  style="font-size: 14px; color: #666; margin: 0;">{{shortDesc}}</p>
                        </div>
                    </div>
                </div>
                {{/each}}
                {{else}}
                <div class="col-12 text-center">
                    <p>You haven't saved any courses yet.</p>
                </div>
                {{/if}}
            </div>
        </div>
    </section>


</main>

<nav aria-label="Page navigation example" class="mt-3">
    <ul class="pagination justify-content-center">
        {{#if (gt currentPage 1)}}
        <li class="page-item">
            <a class="page-link" href="?page={{decrement currentPage}}">«</a>
        </li>
        {{else}}
        <li class="page-item disabled"><a class="page-link">«</a></li>
        {{/if}}

        {{#each pages}}
        {{#if isCurrent}}
        <li class="page-item active" aria-current="page">
            <a class="page-link" href="?page={{this.value}}">{{this.value}}</a>
        </li>
        {{else}}
        <li class="page-item">
            <a class="page-link" href="?page={{this.value}}">{{this.value}}</a>
        </li>
        {{/if}}
        {{/each}}

        {{#if (lt currentPage totalPages)}}
        <li class="page-item">
            <a class="page-link" href="?page={{increment currentPage}}">»</a>
        </li>
        {{else}}
        <li class="page-item disabled"><a class="page-link">»</a></li>
        {{/if}}
    </ul>
</nav>