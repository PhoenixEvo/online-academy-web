<main id="main">
  <div class="page-title" data-aos="fade">
    <nav class="breadcrumbs">
      <div class="container">
        <ol>
          <li><a href="/">Home</a></li>
          <li><a href="/courses">Courses</a></li>
          <li><a href="/courses/{{course.id}}">{{course.title}}</a></li>
          <li class="current">Checkout</li>
        </ol>
      </div>
    </nav>

    <div class="heading">
      <div class="container">
        <div class="row d-flex justify-content-center text-center">
          <div class="col-lg-8">
            <h1>Check out</h1>
            <p class="mb-0">Complete your purchase to start learning</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- ======= Checkout Section ======= -->
  <section id="checkout" class="checkout section-bg">
    <div class="container my-5">
      <form id="paymentForm" method="POST" action="/students/purchase/{{course.id}}">
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <div class="row">
          <!-- Left side - Payment Form -->
          <div class="col-md-7">
            <div class="card p-4 mb-4">
              <div class="mb-4">
                <h5 class="fw-bold"><i class="bi bi-person-circle me-2"></i>1. Account details</h5>
                <input type="email" id="email" class="form-control" value="{{user.email}}" disabled>
                <small class="text-muted">Logged in as {{user.name}}</small>
              </div>
              
              <div class="mb-4">
                <h5 class="fw-bold"><i class="bi bi-credit-card me-2"></i>2. Payment method</h5>
                <p class="text-muted small mb-3">We accept the following payment methods:</p>
                <div class="payment-methods mb-4">
                  <img src="/img/icon_payment/vcb_logo.png" height="35" class="payment-logo me-2" alt="VCB">
                  <img src="/img/icon_payment/momo_logo.png" height="35" class="payment-logo me-2" alt="MoMo">
                  <img src="/img/icon_payment/visa_logo.png" height="35" class="payment-logo me-2" alt="Visa">
                </div>

                <div class="mb-3">
                  <label for="cardnumber" class="form-label fw-semibold">Card number <span class="text-danger">*</span></label>
                  <input type="text" 
                         id="cardnumber" 
                         name="cardnumber" 
                         class="form-control form-control-lg" 
                         placeholder="1234 5678 9012 3456" 
                         required 
                         maxlength="19">
                  <small class="text-muted">Enter your 13-19 digit card number</small>
                </div>
                
                <div class="row">
                  <div class="col-md-6 mb-3">
                    <label for="expiry" class="form-label fw-semibold">Expiry date</label>
                    <input type="text" 
                           id="expiry" 
                           name="expiry" 
                           class="form-control" 
                           placeholder="MM/YY" 
                           maxlength="5">
                  </div>
                  <div class="col-md-6 mb-3">
                    <label for="cvv" class="form-label fw-semibold">CVV</label>
                    <input type="text" 
                           id="cvv" 
                           name="cvv" 
                           class="form-control" 
                           placeholder="123" 
                           maxlength="3">
                  </div>
                </div>
                
                <div class="mt-3">
                  <label for="cardname" class="form-label fw-semibold">Name on card <span class="text-danger">*</span></label>
                  <input type="text" 
                         id="cardname" 
                         name="cardname" 
                         class="form-control form-control-lg" 
                         placeholder="JOHN DOE" 
                         required>
                  <small class="text-muted">Enter name exactly as shown on card</small>
                </div>
              </div>
            </div>

            <!-- Order Details Card -->
            <div class="card p-4">
              <h5 class="fw-bold mb-3"><i class="bi bi-bag-check me-2"></i>Order details <small class="text-muted">(1 course)</small></h5>
              <div class="d-flex align-items-center">
                <img src="{{course.thumbnail_url}}" 
                     alt="{{course.title}}" 
                     width="120" 
                     height="80" 
                     class="rounded me-3" 
                     style="object-fit: cover; border: 2px solid #f0f0f0;">
                <div class="flex-grow-1">
                  <h6 class="mb-1 fw-bold">{{course.title}}</h6>
                  <p class="text-muted small mb-1">
                    <i class="bi bi-folder2 me-1"></i>{{course.category_name}}
                  </p>
                  <p class="text-muted small mb-0">
                    <i class="bi bi-person me-1"></i>{{course.instructor_name}}
                  </p>
                </div>
                <div class="text-end">
                  {{#if course.sale_price}}
                    <span class="fw-bold text-danger fs-5 d-block">{{format_number course.sale_price}}</span>
                    <span class="text-decoration-line-through text-muted small">{{format_number course.price}}</span>
                  {{else}}
                    <span class="fw-bold text-dark fs-5">{{format_number course.price}}</span>
                  {{/if}}
                </div>
              </div>
            </div>
          </div>

          <!-- Right side - Order Summary -->
          <div class="col-md-5">
            <div class="card p-4 shadow-sm sticky-top" style="top: 20px;">
              <h5 class="fw-bold mb-3"><i class="bi bi-receipt me-2"></i>Order summary</h5>
              <hr>
              
              <div class="d-flex justify-content-between mb-2">
                <span>Original Price:</span>
                <span class="fw-semibold">{{format_number course.price}}</span>
              </div>
              
              {{#if course.sale_price}}
              <div class="d-flex justify-content-between text-success mb-2">
                <span><i class="bi bi-tag-fill me-1"></i>Discount:</span>
                <span class="fw-semibold">-{{format_number (subtract course.price course.sale_price)}}</span>
              </div>
              {{/if}}
              
              <hr>
              
              <div class="d-flex justify-content-between fw-bold fs-4 mb-3">
                <span>Total:</span>
                {{#if course.sale_price}}
                  <span class="text-danger">{{format_number course.sale_price}}</span>
                {{else}}
                  <span class="text-primary">{{format_number course.price}}</span>
                {{/if}}
              </div>

              <button type="button" 
                      class="btn btn-info btn-lg w-100 py-3 fw-bold" 
                      data-bs-toggle="modal" 
                      data-bs-target="#confirmModal">
                <i class="bi bi-wallet2 me-2"></i>Complete Payment
              </button>

              <div class="mt-4 p-3 bg-light rounded">
                <h6 class="fw-bold mb-2"><i class="bi bi-shield-check text-success me-2"></i>Safe & Secure</h6>
                <ul class="small text-muted mb-0 ps-3">
                  <li>SSL encrypted payment</li>
                  <li>Money-back guarantee</li>
                  <li>Lifetime access to course</li>
                </ul>
              </div>

              <p class="text-muted mt-3 small text-center mb-0">
                By completing your purchase, you agree to these
                <a href="#" class="text-decoration-none">Terms of Use</a>.
              </p>
            </div>
          </div>
        </div>

        <!-- Modal Xác nhận thanh toán -->
        <div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
              <div class="modal-header border-0">
                <h5 class="modal-title fw-bold" id="confirmModalLabel">
                  <i class="bi bi-exclamation-circle text-warning me-2"></i>Confirm Purchase
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>

              <div class="modal-body">
                <p class="text-center mb-4">Are you sure you want to proceed with the payment?</p>

                <div class="list-group">
                  <div class="list-group-item border rounded">
                    <div class="d-flex align-items-center">
                      <img src="{{course.thumbnail_url}}" 
                           alt="{{course.title}}" 
                           width="80" 
                           height="60"
                           class="rounded me-3"
                           style="object-fit: cover;">
                      <div class="flex-grow-1">
                        <h6 class="fw-bold mb-1">{{course.title}}</h6>
                        <p class="text-muted small mb-2">{{course.category_name}}</p>
                        <p class="text-success fw-bold mb-0 fs-5">
                          {{#if course.sale_price}}
                            {{format_number course.sale_price}}
                          {{else}}
                            {{ format_number course.price}}
                          {{/if}}
                        </p>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="alert alert-info mt-3 mb-0" role="alert">
                  <i class="bi bi-info-circle me-2"></i>
                  <small>You will get immediate access to the course after payment</small>
                </div>
              </div>

              <div class="modal-footer border-0">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                  <i class="bi bi-x-circle me-1"></i>Cancel
                </button>
                <button type="submit" class="btn btn-success btn-lg" id="confirmPurchaseBtn">
                  <span class="spinner-border spinner-border-sm d-none me-2" role="status" aria-hidden="true"></span>
                  <i class="bi bi-check-circle me-1"></i>Confirm & Pay
                </button>
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>
  </section><!-- End Checkout Section -->
</main>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const paymentForm = document.getElementById('paymentForm');
  const confirmBtn = document.getElementById('confirmPurchaseBtn');
  const confirmModal = document.getElementById('confirmModal');
  
  // Handle form submission
  paymentForm.addEventListener('submit', function(e) {
    // Show loading spinner
    const spinner = confirmBtn.querySelector('.spinner-border');
    const icon = confirmBtn.querySelector('.bi-check-circle');
    
    if (spinner && icon) {
      spinner.classList.remove('d-none');
      icon.classList.add('d-none');
      confirmBtn.disabled = true;
      confirmBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Processing...';
    }
  });

  // Format card number input (add spaces every 4 digits)
  const cardNumberInput = document.getElementById('cardnumber');
  if (cardNumberInput) {
    cardNumberInput.addEventListener('input', function(e) {
      let value = e.target.value.replace(/\s/g, '');
      value = value.replace(/\D/g, ''); // Remove non-digits
      
      // Limit to 19 digits (max card length)
      value = value.substring(0, 19);
      
      // Add space every 4 digits
      let formattedValue = value.match(/.{1,4}/g)?.join(' ') || value;
      e.target.value = formattedValue;
      
      // Validate card number length
      if (value.length >= 13 && value.length <= 19) {
        cardNumberInput.classList.remove('is-invalid');
        cardNumberInput.classList.add('is-valid');
      } else if (value.length > 0) {
        cardNumberInput.classList.remove('is-valid');
        cardNumberInput.classList.add('is-invalid');
      } else {
        cardNumberInput.classList.remove('is-valid', 'is-invalid');
      }
    });
  }

  // Format expiry date (MM/YY)
  const expiryInput = document.getElementById('expiry');
  if (expiryInput) {
    expiryInput.addEventListener('input', function(e) {
      let value = e.target.value.replace(/\D/g, '');
      
      if (value.length >= 2) {
        value = value.slice(0, 2) + '/' + value.slice(2, 4);
      }
      
      e.target.value = value;
      
      // Basic validation
      if (value.length === 5) {
        const month = parseInt(value.substring(0, 2));
        if (month >= 1 && month <= 12) {
          expiryInput.classList.remove('is-invalid');
          expiryInput.classList.add('is-valid');
        } else {
          expiryInput.classList.remove('is-valid');
          expiryInput.classList.add('is-invalid');
        }
      } else if (value.length > 0) {
        expiryInput.classList.remove('is-valid', 'is-invalid');
      }
    });
  }

  // Only allow numbers for CVV
  const cvvInput = document.getElementById('cvv');
  if (cvvInput) {
    cvvInput.addEventListener('input', function(e) {
      e.target.value = e.target.value.replace(/\D/g, '');
      
      if (e.target.value.length === 3) {
        cvvInput.classList.remove('is-invalid');
        cvvInput.classList.add('is-valid');
      } else if (e.target.value.length > 0) {
        cvvInput.classList.remove('is-valid');
        cvvInput.classList.add('is-invalid');
      } else {
        cvvInput.classList.remove('is-valid', 'is-invalid');
      }
    });
  }

  // Card name validation (letters and spaces only)
  const cardNameInput = document.getElementById('cardname');
  if (cardNameInput) {
    cardNameInput.addEventListener('input', function(e) {
      // Convert to uppercase
      e.target.value = e.target.value.toUpperCase();
      
      // Remove invalid characters
      e.target.value = e.target.value.replace(/[^A-Z\s]/g, '');
      
      if (e.target.value.trim().length >= 3) {
        cardNameInput.classList.remove('is-invalid');
        cardNameInput.classList.add('is-valid');
      } else if (e.target.value.length > 0) {
        cardNameInput.classList.remove('is-valid');
        cardNameInput.classList.add('is-invalid');
      } else {
        cardNameInput.classList.remove('is-valid', 'is-invalid');
      }
    });
  }

  // Form validation before showing modal
  const openModalBtn = document.querySelector('[data-bs-target="#confirmModal"]');
  if (openModalBtn) {
    openModalBtn.addEventListener('click', function(e) {
      // Check if required fields are filled
      const cardNumber = cardNumberInput.value.replace(/\s/g, '');
      const cardName = cardNameInput.value.trim();
      
      if (!cardNumber || cardNumber.length < 13 || !cardName || cardName.length < 3) {
        e.preventDefault();
        e.stopPropagation();
        
        // Mark invalid fields
        if (!cardNumber || cardNumber.length < 13) {
          cardNumberInput.classList.add('is-invalid');
        }
        if (!cardName || cardName.length < 3) {
          cardNameInput.classList.add('is-invalid');
        }
        
        // Show alert
        alert('Please fill in all required payment details correctly.');
        return false;
      }
    });
  }
});
</script>