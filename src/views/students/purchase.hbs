<main id="main">
  <div class="page-title" data-aos="fade">
    <nav class="breadcrumbs">
      <div class="container">
        <ol>
          <li><a href="/">Home</a></li>
          <li><a href="/checkout">Checkout</a></li>
          <li class="current">{{title}}</li>
        </ol>
      </div>
    </nav>

    <div class="heading">
      <div class="container">
        <div class="row d-flex justify-content-center text-center">
          <div class="col-lg-8">
            <h1>Check out</h1>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- ======= Checkout Section ======= -->
  <section id="checkout" class="checkout section-bg">
    <div class="container my-5">
      <div class="row">
        <!-- Left side -->
        <div class="col-md-7">
          <div class="card p-3">
            <div class="mb-4">
              <h5>1. Account details</h5>
              <input type="text" id="email" class="form-control" value="minhquan@gmail.com" disabled>
            </div>
            <div class="mb-4">
              <h5>2. Payment method</h5>
              <h6>Cards</h6>
              <div class="payment-methods">
                <img src="/img/icon_payment/vcb_logo.png" height="30" class="payment-logo me-2">
                <img src="/img/icon_payment/momo_logo.png" height="30" class="payment-logo me-2">
                <img src="/img/icon_payment/visa_logo.png" height="30" class="payment-logo me-2">
              </div>

              <div class="mb-3">
                <label for="cardnumber" class="form-label">Card number</label>
                <input type="text" id="cardnumber" class="form-control">
              </div>
              <div class="mt-3">
                <label class="form-label">Name on card</label>
                <input type="text" class="form-control">
              </div>
            </div>
          </div>

          <div class="card p-3 mt-4">
            <h5>Order details <small class="text-muted">(1 course)</small></h5>
            <div class="d-flex align-items-center mt-3">
              <img src="/img/course/course-1.webp" alt="Course image" width="80" class="rounded me-3">
              <div class="flex-grow-1">
                <p class="mb-1 fw-semibold">PMP Certification Exam Prep Course 35 PDU Contact Hours/PDU</p>
              </div>
              <span class="fw-bold text-dark">₫3,600,000</span>
              <span class="text-decoration-line-through text-muted ms-2">₫1,990,000</span>
            </div>
          </div>
        </div>

        <!-- Right side -->
        <div class="col-md-5">
          <div class="card p-4 shadow-sm">
            <h5>Order summary</h5>
            <hr>
            <div class="d-flex justify-content-between">
              <span>Original Price:</span>
              <span>₫3,600,000</span>
            </div>
            <div class="d-flex justify-content-between text-success">
              <span>Discount (84% off):</span>
              <span>-₫1,990,000</span>
            </div>
            <hr>
            <div class="d-flex justify-content-between fw-bold">
              <span>Total (1 course):</span>
              <span>₫1,990,000</span>
            </div>

            <button type="button" class="btn btn-info w-100 mt-4 py-2" data-bs-toggle="modal"
              data-bs-target="#confirmModal">
              <i class="bi bi-wallet2"></i> Pay Now
            </button>

            <p class="text-muted mt-3 small">
              By completing your purchase, you agree to these
              <a href="#">Terms of Use</a>.
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Modal Xác nhận thanh toán -->
    <div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="confirmModalLabel">Purchase Confirmation</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>

          <div class="modal-body">
            <p class="text-center mb-4">Are you sure to proceed with the payment for this course?</p>

            <!-- Danh sách khóa học -->
            <div class="list-group">
              <!-- Khóa học 1 -->
              <div class="list-group-item d-flex align-items-center">
                <img src="/img/course/course-1.webp" alt="Course image" width="80" class="rounded me-3">
                <div class="flex-grow-1">
                  <p class="fw-semibold mb-1">PMP Certification Exam Prep Course</p>
                  <p class="text-success fw-bold mb-0">₫1,990,000</p>
                </div>
              </div>
            </div>
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-success" data-bs-target="#successModal" data-bs-toggle="modal"
              data-bs-dismiss="modal">
              Purchase
            </button>

          </div>
        </div>
      </div>
    </div>

    <!-- Modal thành công -->
    <div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="successModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content text-center p-4">
          <div class="modal-body">
            <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
            <h4 class="mt-3 mb-2">Payment Successful!</h4>
            <p class="text-muted">Your purchase has been completed successfully.</p>

            <div class="d-flex justify-content-center gap-3 mt-4">
              <a href="/" class="btn btn-outline-secondary">Home</a>
              <a href="/students/enrollments" class="btn btn-success">My Course</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section><!-- End Checkout Section -->
</main>